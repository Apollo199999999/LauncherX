<fw:AcrylicWindow x:Class="LauncherX.WebsiteDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherX"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="Add a website" Height="125" Width="500" ResizeMode="NoResize" AcrylicWindowStyle="NoIcon" NoiseOpacity="0" TintOpacity="1" WindowStartupLocation="CenterScreen">
    <Grid>
        <TextBlock x:Name="label" Text="URL:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top"/>
        <TextBox x:Name="urlBox" HorizontalAlignment="Left" Height="22" Margin="10,36,0,0" TextWrapping="Wrap"  VerticalAlignment="Top" Width="475"/>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Left" Margin="410,63,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>

    </Grid>
</fw:AcrylicWindow>
