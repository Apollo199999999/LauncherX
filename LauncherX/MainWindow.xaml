<fw:AcrylicWindow x:Class="LauncherX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherX"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        xmlns:xamlHost="clr-namespace:Microsoft.Toolkit.Wpf.UI.XamlHost;assembly=Microsoft.Toolkit.Wpf.UI.XamlHost"
        mc:Ignorable="d"
        Title="LauncherX - Organize all your stuff!" Height="600" Width="830" MinHeight="400" MinWidth="650" x:Name="window" TintOpacity="0.85" NoiseOpacity="0.015" Closing="window_Closing" MouseDown="window_MouseDown" AcrylicWindowStyle="Normal" BorderBrush="Transparent">
    <DockPanel>
        <Grid DockPanel.Dock="Top" x:Name="Container" Margin="0,0,0,0" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Transparent">
            <TextBlock x:Name="header" HorizontalAlignment="Left" Margin="10,66,0,0" TextWrapping="Wrap" Text="My files, folders, and websites" VerticalAlignment="Top" FontWeight="Bold" FontSize="18"/>
            <Grid>
                <xamlHost:WindowsXamlHost x:Name="OpenFileHost" InitialTypeName="Windows.UI.Xaml.Controls.Button" Margin="0,62,10,0" HorizontalAlignment="Right" VerticalAlignment="Top" Height="32" RenderTransformOrigin="0.5,0.5" Width="105" ChildChanged="OpenFileHost_ChildChanged"/>
                <xamlHost:WindowsXamlHost x:Name="OpenFolderHost" HorizontalAlignment="Right" Height="32" Margin="0,62,125,0" VerticalAlignment="Top" Width="110" ChildChanged="OpenFolderHost_ChildChanged" InitialTypeName="Windows.UI.Xaml.Controls.Button"/>
                <xamlHost:WindowsXamlHost x:Name="OpenWebsiteHost" HorizontalAlignment="Right" Height="32" Margin="0,62,245,0" VerticalAlignment="Top" Width="120" InitialTypeName="Windows.UI.Xaml.Controls.Button" ChildChanged="OpenWebsiteHost_ChildChanged"/>
                <xamlHost:WindowsXamlHost x:Name="SearchHost" Height="32" Margin="50,10,50,0" VerticalAlignment="Top" InitialTypeName="Windows.UI.Xaml.Controls.AutoSuggestBox" ChildChanged="SearchHost_ChildChanged"/>
                <Grid.Effect>
                    <BlurEffect Radius="200"/>
                </Grid.Effect>
            </Grid>
        </Grid>
        <Grid DockPanel.Dock="Bottom" x:Name="grid" fw:PointerTracker.Enabled="True" Margin="0,10,0,0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Background="Transparent" MouseDown="grid_MouseDown" >
            <xamlHost:WindowsXamlHost Margin="10,10,10,55" x:Name="gridviewhost" InitialTypeName="Windows.UI.Xaml.Controls.GridView" ChildChanged="gridviewhost_ChildChanged" VerticalAlignment="Stretch" HorizontalAlignment="Stretch"/>
            <Button x:Name="SettingsButton" HorizontalAlignment="Right" Height="40" Margin="0,0,10,5" VerticalAlignment="Bottom" Width="40" FontFamily="Segoe MDL2 Assets" Content="&#xE713;" FontSize="19" Background="{x:Null}" Click="SettingsButton_Click"/>

            <Grid x:Name="empty" HorizontalAlignment="Center" Height="55" Margin="0" VerticalAlignment="Center" Width="350">
                <Label x:Name="label1" Content="There is nothing here." HorizontalAlignment="Left" VerticalAlignment="Top" FontSize="16" Foreground="Gray" Margin="40,0,0,0"/>
                <Label x:Name="label" Content="&#xE838;" Margin="0" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="24" FontFamily="Segoe MDL2 Assets" Foreground="Gray" Width="31" />
                <Label x:Name="label2" Content="To add an item, click the buttons at the top right corner." HorizontalAlignment="Left" VerticalAlignment="Top" Foreground="Gray" Margin="40,25,0,0"/>
            </Grid>
        </Grid>

    </DockPanel>
   

</fw:AcrylicWindow>
