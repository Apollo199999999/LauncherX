<fw:AcrylicWindow x:Class="LauncherX.AddItemsErrorDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:LauncherX"
        xmlns:fw="clr-namespace:SourceChord.FluentWPF;assembly=FluentWPF"
        mc:Ignorable="d"
        Title="Error while adding items" Height="290" Width="500" AcrylicWindowStyle="NoIcon" TintOpacity="1" NoiseOpacity="0" ResizeMode="NoResize" WindowStyle="ThreeDBorderWindow">
    <Grid>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Center" Margin="10,10,10,0" TextWrapping="Wrap" Text="The following items could not be loaded into LauncherX. The file(s)/folder(s) may have been moved or deleted. Please check that they are in the correct location, and re-add the file(s)/folder(s) when you are done." VerticalAlignment="Top" Width="474" FontSize="14"/>
        <ListBox x:Name="ErrorFiles" HorizontalAlignment="Center" Height="140" Margin="10,75,10,0" VerticalAlignment="Top" Width="474">
            
        </ListBox>
        <Button x:Name="button" Content="OK" HorizontalAlignment="Right" Margin="0,0,10,9.5" VerticalAlignment="Bottom" Width="60" Height="25" Click="button_Click" />

    </Grid>
</fw:AcrylicWindow>
