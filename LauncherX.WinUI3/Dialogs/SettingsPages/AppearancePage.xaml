<Page
    x:Class="LauncherX.WinUI3.Dialogs.SettingsPages.AppearancePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LauncherX.WinUI3.Dialogs.SettingsPages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:controls="using:SettingsUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Width="700" Height="350">

    <Grid Padding="10">
        <controls:SettingsGroup Header="Appearance" Margin="0,-30,0,0">
            <controls:Setting Header="App theme" Description="Select which app theme to display">
                <controls:Setting.Icon>
                    <SymbolIcon Symbol="SetLockScreen"/>
                </controls:Setting.Icon>
                <controls:Setting.ActionContent>
                    <ComboBox Width="220">
                        <ComboBoxItem>Use Windows Default</ComboBoxItem>
                        <ComboBoxItem>Light</ComboBoxItem>
                        <ComboBoxItem>Dark</ComboBoxItem>
                    </ComboBox>
                </controls:Setting.ActionContent>
            </controls:Setting>
            
        </controls:SettingsGroup>
    </Grid>
</Page>
