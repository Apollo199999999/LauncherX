<ContentDialog
    x:Class="LauncherX.WinUI3.Dialogs.SettingsDialog"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:LauncherX.WinUI3"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    CornerRadius="{StaticResource OverlayCornerRadius}"
    Style="{StaticResource DefaultContentDialogStyle}"
    mc:Ignorable="d" PrimaryButtonText="Save Settings" CloseButtonText="Cancel" DefaultButton="Primary">

    <ContentDialog.Resources>
        <ResourceDictionary>
            <x:Double x:Key="ContentDialogMaxWidth">800</x:Double>
            <x:Double x:Key="ContentDialogMaxHeight">640</x:Double>
            <Thickness x:Key="ContentDialogPadding">0</Thickness>
        </ResourceDictionary>
    </ContentDialog.Resources>
    
    <Grid VerticalAlignment="Top" MaxHeight="640" Margin="-10,-20,-10,-10">
        <NavigationView x:ConnectionId='2' PaneDisplayMode="Top" IsBackButtonVisible="Collapsed" IsBackEnabled="False" IsSettingsVisible="False" x:Name="NavView"                                                          >
            <NavigationView.MenuItems>
                <NavigationViewItem x:ConnectionId='3' Content="Appearance" x:Name="AppearanceMenuItem" Tag="appearance">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE790;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>

                <NavigationViewItem x:ConnectionId='4' Content="About" x:Name="AboutMenuItem" Tag="about">
                    <NavigationViewItem.Icon>
                        <FontIcon FontFamily="Segoe MDL2 Assets" Glyph="&#xE946;"/>
                    </NavigationViewItem.Icon>
                </NavigationViewItem>
            </NavigationView.MenuItems>

            <Frame x:ConnectionId='5' x:Name="ContentFrame"/>
        </NavigationView>
    </Grid>
</ContentDialog>
        

