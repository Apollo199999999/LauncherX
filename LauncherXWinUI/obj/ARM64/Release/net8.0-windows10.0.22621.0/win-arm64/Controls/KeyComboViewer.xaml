<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="LauncherXWinUI.Controls.KeyComboViewer"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <Button x:ConnectionId='2'
            x:Name="ChangeKeyComboBtn"
                                           
            ToolTipService.ToolTip="Edit key combination">
            <StackPanel Orientation="Horizontal">
                <StackPanel x:ConnectionId='6'
                    x:Name="KeyComboKeysPanel"
                    HorizontalAlignment="Left"
                    Orientation="Horizontal" />
                <FontIcon Margin="10,0,0,0" Glyph="&#xE70F;" />
            </StackPanel>
        </Button>

        <!--  ContentDialog for editing key combination  -->
        <ContentDialog x:ConnectionId='3'
            x:Name="KeyComboDialog"
            Title="Change activation shortcut"
            CloseButtonText="Cancel"
                                            
            DefaultButton="Close"
            IsPrimaryButtonEnabled="True"
            PrimaryButtonText="Save">
            <ContentDialog.Resources>
                <!--  Change MaxWidth and MaxHeight of ContentDialog  -->
                <x:Double x:Key="ContentDialogMaxWidth">999999999</x:Double>
                <x:Double x:Key="ContentDialogMaxHeight">999999999</x:Double>
            </ContentDialog.Resources>

            <StackPanel Orientation="Vertical">
                <TextBlock Text="Press a combination of keys to change this shortcut" />
                <StackPanel x:ConnectionId='4'
                    x:Name="KeyComboDialogPanel"
                    Margin="20,20,20,10"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal" />
                <InfoBar x:ConnectionId='5'
                    x:Name="InvalidInfoBar"
                    Title="Invalid shortcut"
                    Margin="10"
                    IsOpen="False"
                    Severity="Error" />
                <TextBlock Foreground="{StaticResource TextFillColorSecondaryBrush}">
                    <TextBlock.Inlines>
                        <Run>Only shortcuts that start with</Run>
                        <Run FontWeight="Bold">Windows Key,</Run>
                        <Run FontWeight="Bold">Ctrl,</Run>
                        <Run FontWeight="Bold">Alt,</Run>
                        <Run>or</Run>
                        <Run FontWeight="Bold">Shift</Run>
                        <Run>are valid.</Run>
                    </TextBlock.Inlines>
                </TextBlock>

                <TextBlock Foreground="{StaticResource TextFillColorSecondaryBrush}">
                    <TextBlock.Inlines>
                        <Run>Pressing</Run>
                        <Run FontWeight="Bold">Enter</Run>
                        <Run>or</Run>
                        <Run FontWeight="Bold">Escape</Run>
                        <Run>will close this dialog, and will not register as a keyboard shortcut.</Run>
                    </TextBlock.Inlines>
                </TextBlock>
            </StackPanel>
        </ContentDialog>

    </Grid>
</UserControl>

