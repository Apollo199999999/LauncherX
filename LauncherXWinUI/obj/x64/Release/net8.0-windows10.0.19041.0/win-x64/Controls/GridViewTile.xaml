<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="LauncherXWinUI.Controls.GridViewTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GridViewTileControl"
    IsRightTapEnabled="True"
                                                 
                                       
    mc:Ignorable="d">

    <StackPanel x:ConnectionId='2'
        x:Name="TilePanel"
        HorizontalAlignment="Stretch"
        VerticalAlignment="Stretch">
        <Image x:ConnectionId='3'
            x:Name="TileImage"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Stretch="Uniform" />

        <TextBlock x:ConnectionId='4'
            x:Name="TileText"
            Margin="5,5,5,5"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            TextAlignment="Center"
            TextTrimming="CharacterEllipsis" />

        <FlyoutBase.AttachedFlyout>
            <MenuFlyout x:ConnectionId='5' x:Name="RightClickMenu">
                <MenuFlyoutItem x:ConnectionId='6'
                    x:Name="MenuOpenOption"
                                                
                    Text="Open">
                    <MenuFlyoutItem.Icon>
                        <FontIcon x:ConnectionId='10' x:Name="MenuOpenOptionIcon" Glyph="&#xE8E5;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:ConnectionId='7'
                    x:Name="MenuOpenLocOption"
                                                   
                    Text="Open Location">
                    <MenuFlyoutItem.Icon>
                        <FontIcon x:ConnectionId='9' x:Name="MenuOpenLocOptionIcon" Glyph="&#xE838;" />
                    </MenuFlyoutItem.Icon>
                </MenuFlyoutItem>

                <MenuFlyoutItem x:ConnectionId='8'
                    x:Name="MenuRemoveOption"
                                                  
                    Icon="Delete"
                    Text="Remove from LauncherX" />
            </MenuFlyout>
        </FlyoutBase.AttachedFlyout>
    </StackPanel>
</UserControl>

