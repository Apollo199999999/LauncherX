<?xml version="1.0" encoding="utf-8" ?>
<winex:WindowEx
    x:Class="LauncherXWinUI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wct="using:CommunityToolkit.WinUI.Controls"
    xmlns:winex="using:WinUIEx"
    Title="LauncherX Settings"
    Width="650"
    Height="550"
    MinWidth="500"
    MinHeight="400"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'
        x:Name="Container"
        VerticalAlignment="Stretch"
                                 >
        <Grid.Background>
            <!--  Fallback solid colour in case both Mica and Acrylic are unsupported  -->
            <SolidColorBrush x:ConnectionId='3'
                x:Name="ContainerFallbackBackgroundBrush"
                Opacity="0.0"
                Color="{ThemeResource SolidBackgroundFillColorBase}" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  TODO: SET CUSTOM TITLEBAR IN 1.6  -->
        <!--  Placeholder titlebar for now  -->
        <Border x:ConnectionId='4'
            x:Name="AppTitleBar"
            Grid.Row="0"
            VerticalAlignment="Top">
            <TextBlock x:ConnectionId='5'
                x:Name="AppTitle"
                Margin="8,8,0,0"
                VerticalAlignment="Top"
                Text="LauncherX Settings" />
        </Border>

        <StackPanel
            Grid.Row="1"
            Margin="20,20,20,0"
            Orientation="Vertical">

            <!--  Settings section  -->
            <TextBlock
                FontSize="20"
                FontWeight="Bold"
                Text="Settings" />
            <TextBlock
                Margin="0,5,0,0"
                FontSize="13"
                FontStyle="Italic"
                Opacity="0.7"
                Text="Settings are automatically saved once modified." />

            <wct:SettingsCard
                Margin="0,10,0,0"
                Description="Adjust the scale of the icons displayed."
                Header="Change icon scale">
                <wct:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE740;" />
                </wct:SettingsCard.HeaderIcon>
                <Slider Width="200" />
            </wct:SettingsCard>

            <wct:SettingsCard
                Margin="0,5,0,0"
                Description="Modify the text shown below the search box."
                Header="Change header text">
                <wct:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE70F;" />
                </wct:SettingsCard.HeaderIcon>
                <TextBox Width="200" />
            </wct:SettingsCard>

            <wct:SettingsCard
                Margin="0,5,0,0"
                Description="Check if any new updates are available."
                Header="Check for updates">
                <wct:SettingsCard.HeaderIcon>
                    <FontIcon Glyph="&#xE895;" />
                </wct:SettingsCard.HeaderIcon>
                <Button Content="Check for Updates" />
            </wct:SettingsCard>

            <!--  About section  -->
            <TextBlock
                Margin="0,20,0,0"
                FontSize="20"
                FontWeight="Bold"
                Text="About" />



        </StackPanel>
    </Grid>
</winex:WindowEx>

