<?xml version="1.0" encoding="utf-8" ?>
<winex:WindowEx
    x:Class="LauncherXWinUI.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:animatedvisuals="using:Microsoft.UI.Xaml.Controls.AnimatedVisuals"
    xmlns:controls="using:LauncherXWinUI.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:muxc="using:Microsoft.UI.Xaml.Controls"
    xmlns:winex="using:WinUIEx"
    Title="LauncherX - Modern app launcher for Windows"
    Width="855"
    Height="600"
    MinWidth="630"
    MinHeight="400"
    TaskBarIcon="Resources\icon.ico"
    mc:Ignorable="d">
    <Grid x:ConnectionId='2'
        x:Name="Container"
        VerticalAlignment="Stretch"
                                 >
        <Grid.Background>
            <!--  Fallback solid colour in case both Mica and Acrylic are unsupported  -->
            <SolidColorBrush x:ConnectionId='3'
                x:Name="ContainerFallbackBackgroundBrush"
                Opacity="0.0"
                Color="{ThemeResource SolidBackgroundFillColorBase}" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <!--  TODO: SET CUSTOM TITLEBAR IN 1.6  -->
        <!--  Placeholder titlebar for now  -->
        <Border x:ConnectionId='4'
            x:Name="AppTitleBar"
            Grid.Row="0"
            VerticalAlignment="Top">
            <TextBlock x:ConnectionId='14'
                x:Name="AppTitle"
                Margin="8,8,0,0"
                VerticalAlignment="Top"
                Text="LauncherX - Modern app launcher for Windows" />
        </Border>


        <Grid x:ConnectionId='5'
            x:Name="ControlsGrid"
            Grid.Row="1"
            Margin="20,20,20,0">

            <AutoSuggestBox x:ConnectionId='8'
                x:Name="SearchBox"
                Margin="0,10,45,0"
                VerticalAlignment="Top"
                PlaceholderText="Search through everything in LauncherX"
                QueryIcon="Find" />
            <Button x:ConnectionId='9'
                x:Name="SettingsButton"
                Width="35"
                Height="35"
                Margin="0,10,0,0"
                Padding="6"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center">
                <!--  Animated Settings Icon  -->
                <Viewbox
                    Width="18"
                    Height="18"
                    Stretch="Uniform"
                    StretchDirection="Both">
                    <muxc:AnimatedIcon>
                        <animatedvisuals:AnimatedSettingsVisualSource />
                        <muxc:AnimatedIcon.FallbackIconSource>
                            <muxc:SymbolIconSource Symbol="Setting" />
                        </muxc:AnimatedIcon.FallbackIconSource>
                    </muxc:AnimatedIcon>
                </Viewbox>

            </Button>

            <Grid
                Height="32"
                Margin="0,62,0,0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="365" />
                </Grid.ColumnDefinitions>

                <TextBlock x:ConnectionId='10'
                    x:Name="HeaderTextBlock"
                    Grid.Column="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Center"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="My files, folders, and websites"
                    TextTrimming="CharacterEllipsis"
                    TextWrapping="NoWrap" />

                <StackPanel
                    Grid.Column="1"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Stretch"
                    Orientation="Horizontal">
                    <Button x:ConnectionId='11'
                        x:Name="AddFileBtn"
                        Width="105"
                        Height="32"
                                                
                        Content="Add a file"
                        Style="{ThemeResource AccentButtonStyle}" />
                    <Button x:ConnectionId='12'
                        x:Name="AddFolderBtn"
                        Width="110"
                        Height="32"
                        Margin="10,0,0,0"
                        Content="Add a folder" />
                    <Button x:ConnectionId='13'
                        x:Name="AddWebsiteBtn"
                        Width="120"
                        Height="32"
                        Margin="10,0,0,0"
                        Content="Add a website" />
                </StackPanel>
            </Grid>
        </Grid>

        <Grid x:ConnectionId='6'
            x:Name="GridViewBackground"
            Grid.Row="2"
            Margin="0,10,0,0"
            Background="{ThemeResource ControlFillColorDefaultBrush}">
            <GridView x:ConnectionId='7'
                x:Name="ItemsGridView"
                Margin="20,20,20,20"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                AllowDrop="True"
                CanDragItems="True"
                CanReorderItems="True"
                IsItemClickEnabled="True" />
        </Grid>

    </Grid>
</winex:WindowEx>

