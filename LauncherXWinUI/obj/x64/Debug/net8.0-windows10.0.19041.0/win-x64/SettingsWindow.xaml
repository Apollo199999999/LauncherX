<?xml version="1.0" encoding="utf-8" ?>
<winex:WindowEx
    x:Class="LauncherXWinUI.SettingsWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:wct="using:CommunityToolkit.WinUI.Controls"
    xmlns:winex="using:WinUIEx"
    Title="LauncherX Settings"
    Width="670"
    Height="550"
    IsMaximizable="False"
    IsMinimizable="False"
    IsResizable="False"
    mc:Ignorable="d">

    <Grid x:ConnectionId='2'
        x:Name="Container"
        VerticalAlignment="Stretch"
                                 >
        <Grid.Background>
            <!--  Fallback solid colour in case both Mica and Acrylic are unsupported  -->
            <SolidColorBrush x:ConnectionId='3'
                x:Name="ContainerFallbackBackgroundBrush"
                Opacity="0.0"
                Color="{ThemeResource SolidBackgroundFillColorBase}" />
        </Grid.Background>

        <Grid.RowDefinitions>
            <RowDefinition Height="auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="auto" />
        </Grid.RowDefinitions>

        <!--  TODO: SET CUSTOM TITLEBAR IN 1.6  -->
        <!--  Placeholder titlebar for now  -->
        <Border x:ConnectionId='4'
            x:Name="AppTitleBar"
            Grid.Row="0"
            VerticalAlignment="Top">
            <TextBlock x:ConnectionId='14'
                x:Name="AppTitle"
                Margin="8,8,0,0"
                VerticalAlignment="Top"
                Text="LauncherX Settings" />
        </Border>

        <ScrollViewer
            Grid.Row="1"
            Margin="10,10,10,0"
            Padding="10,10,10,0"
            VerticalAlignment="Stretch">
            <StackPanel Orientation="Vertical">
                <!--  Settings section  -->
                <TextBlock
                    FontSize="20"
                    FontWeight="Bold"
                    Text="Settings" />
                <TextBlock
                    Margin="0,5,0,0"
                    FontSize="13"
                    FontStyle="Italic"
                    Opacity="0.7"
                    Text="Settings are automatically saved once modified." />

                <wct:SettingsCard
                    Margin="0,10,0,0"
                    Description="Adjust the scale of the icons displayed."
                    Header="Change icon scale">
                    <wct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE740;" />
                    </wct:SettingsCard.HeaderIcon>
                    <Slider x:ConnectionId='13'
                        x:Name="ScaleSlider"
                        Width="220"
                        Maximum="6.00"
                        Minimum="0.25"
                        SmallChange="0.05"
                        SnapsTo="Ticks"
                        StepFrequency="0.05"
                        TickFrequency="0.05"
                        TickPlacement="Outside" />
                </wct:SettingsCard>

                <wct:SettingsCard
                    Margin="0,5,0,0"
                    Description="Modify the text shown below the search box."
                    Header="Change header text">
                    <wct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE70F;" />
                    </wct:SettingsCard.HeaderIcon>
                    <TextBox x:ConnectionId='12' x:Name="ChangeHeaderTextBox" Width="220" />
                </wct:SettingsCard>

                <wct:SettingsCard
                    Margin="0,5,0,0"
                    Description="Check if any new updates are available."
                    Header="Check for updates">
                    <wct:SettingsCard.HeaderIcon>
                        <FontIcon Glyph="&#xE895;" />
                    </wct:SettingsCard.HeaderIcon>
                    <StackPanel Orientation="Horizontal">
                        <ProgressRing x:ConnectionId='10'
                            x:Name="CheckUpdatesProgressRing"
                            Margin="0,0,10,0"
                            IsActive="False" />
                        <Button x:ConnectionId='11'
                            x:Name="CheckUpdatesBtn"
                                                         
                            Content="Check for updates" />
                    </StackPanel>
                </wct:SettingsCard>

                <InfoBar x:ConnectionId='6'
                    x:Name="UpdateInfoBar"
                    Title="Update available"
                    Margin="0,5,0,0"
                    IsOpen="False"
                    Message="To download it, click the button below"
                    Severity="Informational">
                    <Button x:ConnectionId='9'
                        x:Name="GetUpdateBtn"
                        Margin="0,0,0,20"
                                                  
                        Content="Get update"
                        Style="{ThemeResource AccentButtonStyle}" />
                </InfoBar>

                <InfoBar x:ConnectionId='7'
                    x:Name="NoUpdateInfoBar"
                    Title="You're up to date!"
                    Margin="0,5,0,0"
                    IsOpen="False"
                    Message="No updates are available."
                    Severity="Success" />

                <InfoBar x:ConnectionId='8'
                    x:Name="UpdateFailInfoBar"
                    Title="Failed to check for updates"
                    Margin="0,5,0,0"
                    IsOpen="False"
                    Message="Please check your internet connection, or try again later."
                    Severity="Error" />

                <!--  About section  -->
                <TextBlock
                    Margin="0,20,0,0"
                    FontSize="20"
                    FontWeight="Bold"
                    Text="About" />

                <wct:SettingsExpander
                    Margin="0,10,0,10"
                    Description="View info about LauncherX."
                    Header="About LauncherX"
                    IsExpanded="False">
                    <wct:SettingsExpander.HeaderIcon>
                        <FontIcon Glyph="&#xE946;" />
                    </wct:SettingsExpander.HeaderIcon>

                    <wct:SettingsExpander.Items>
                        <!--  Expander content  -->
                        <wct:SettingsCard ContentAlignment="Left">
                            <local:AboutSectionControl />
                        </wct:SettingsCard>
                    </wct:SettingsExpander.Items>
                </wct:SettingsExpander>
            </StackPanel>
        </ScrollViewer>

        <Button x:ConnectionId='5'
            x:Name="CloseButton"
            Grid.Row="2"
            Width="100"
            Margin="20,10,20,20"
            HorizontalAlignment="Right"
                                     
            Content="Close"
            Style="{ThemeResource AccentButtonStyle}" />
    </Grid>
</winex:WindowEx>

