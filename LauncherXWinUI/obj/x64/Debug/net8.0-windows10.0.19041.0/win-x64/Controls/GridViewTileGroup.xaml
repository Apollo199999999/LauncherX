<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="LauncherXWinUI.Controls.GridViewTileGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GridViewTileGroupControl"
    mc:Ignorable="d">

    <Border x:ConnectionId='2'
        x:Name="ControlBorder"
        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
        BorderThickness="0">
        <Grid x:ConnectionId='3' x:Name="GroupGrid">
            <GridView x:ConnectionId='4' x:Name="ItemsPreviewGridView" SelectionMode="None" />
        </Grid>
    </Border>
</UserControl>

