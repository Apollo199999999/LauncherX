<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="LauncherXWinUI.Controls.GridViewTileGroup"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GridViewTileGroupControl"
    AllowDrop="True"
    mc:Ignorable="d">

    <FlyoutBase.AttachedFlyout>
        <MenuFlyout x:ConnectionId='2' x:Name="AddItemFlyout">
            <MenuFlyoutItem Text="Add item to group" />
        </MenuFlyout>
    </FlyoutBase.AttachedFlyout>

    <Border x:ConnectionId='3'
        x:Name="ControlBorder"
        BorderBrush="{ThemeResource AccentFillColorDefaultBrush}"
        BorderThickness="0">
        <StackPanel x:ConnectionId='4'
            x:Name="GroupPanel"
                                                
                                      >
            <Grid x:ConnectionId='5'
                x:Name="ItemsPreviewGrid"
                HorizontalAlignment="Center"
                VerticalAlignment="Center">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
            </Grid>
            <TextBlock x:ConnectionId='6'
                x:Name="TileText"
                Margin="5,5,5,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />

            <ContentDialog x:ConnectionId='7'
                x:Name="GroupDialog"
                Title="New group"
                CloseButtonText="Close"
                DefaultButton="Close">
                <ContentDialog.Resources>
                    <!--  Change MaxWidth of ContentDialog  -->
                    <x:Double x:Key="ContentDialogMaxWidth">800</x:Double>
                </ContentDialog.Resources>
                <GridView x:ConnectionId='8'
                    x:Name="ItemsGridView"
                    Width="550"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    AllowDrop="True"
                    CanDragItems="True"
                    CanReorderItems="True"
                    IsItemClickEnabled="True"
                    SelectionMode="Single" />
            </ContentDialog>

            <FlyoutBase.AttachedFlyout>
                <MenuFlyout x:ConnectionId='9' x:Name="RightClickMenu">
                    <MenuFlyoutItem x:ConnectionId='10'
                        x:Name="MenuRemoveOption"
                                                      
                        Icon="Delete"
                        Text="Remove group from LauncherX" />
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
        </StackPanel>
    </Border>
</UserControl>

