<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="LauncherXWinUI.Controls.GridViewTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GridViewTileControl"
    AllowDrop="True"
    IsRightTapEnabled="True"
                                                       
                                                         
                                                 
                                       
    mc:Ignorable="d">
    <FlyoutBase.AttachedFlyout>
        <MenuFlyout x:ConnectionId='2' x:Name="CreateGroupFlyout">
            <MenuFlyoutItem Text="Create new group" />
        </MenuFlyout>
    </FlyoutBase.AttachedFlyout>
    <!--  The BorderThickness is set as such because when clicking on the GridViewTile, the highlight happens too quickly which causes the bottom border to be too thin  -->
    <Border x:ConnectionId='3'
        x:Name="ControlBorder"
        AllowDrop="True"
        BorderThickness="2,2,2,3"
        CornerRadius="{ThemeResource ControlCornerRadius}">
        <Grid x:ConnectionId='4'
            x:Name="TilePanel"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AllowDrop="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>

            <Image x:ConnectionId='5'
                x:Name="TileImage"
                Grid.Row="0"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Center"
                AllowDrop="True"
                Stretch="Uniform" />

            <TextBlock x:ConnectionId='6'
                x:Name="TileText"
                Grid.Row="1"
                Margin="5,5,5,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                AllowDrop="True"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />

            <!--  EditItemDialog  -->
            <ContentDialog x:ConnectionId='7'
                x:Name="EditItemDialog"
                Title="Edit item"
                CloseButtonText="Close"
                DefaultButton="Primary"
                PrimaryButtonText="Save and Exit">
                <Grid Width="400">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <!--  Edit/Reset Icon  -->
                    <StackPanel
                        Grid.Row="0"
                        VerticalAlignment="Center"
                        Orientation="Vertical">
                        <Image x:ConnectionId='11'
                            x:Name="EditDialogImage"
                            Width="100"
                            Height="100" />

                        <StackPanel Margin="0,10,0,0" Orientation="Horizontal">
                            <Button x:ConnectionId='12'
                                x:Name="EditIconBtn"
                                HorizontalAlignment="Center"
                                                         
                                Content="Edit icon" />
                            <Button x:ConnectionId='13'
                                x:Name="ResetIconBtn"
                                Margin="10,0,0,0"
                                HorizontalAlignment="Center"
                                                          
                                Content="Reset icon" />
                        </StackPanel>

                    </StackPanel>


                    <Grid
                        Grid.Row="1"
                        Margin="0,20,0,0"
                        HorizontalAlignment="Stretch">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto" />
                            <ColumnDefinition Width="*" />
                        </Grid.ColumnDefinitions>

                        <Grid.RowDefinitions>
                            <RowDefinition Height="auto" />
                            <RowDefinition Height="auto" />
                        </Grid.RowDefinitions>

                        <!--  Edit display text  -->
                        <TextBlock
                            Grid.Row="0"
                            Grid.Column="0"
                            VerticalAlignment="Center"
                            Text="Display Text:" />
                        <TextBox x:ConnectionId='8'
                            x:Name="EditDisplayTextTextBox"
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="10,0,0,0"
                            HorizontalAlignment="Stretch" />

                        <!--  Edit launch args  -->
                        <TextBlock x:ConnectionId='9'
                            x:Name="LaunchArgsTextBlock"
                            Grid.Row="1"
                            Grid.Column="0"
                            Margin="0,10,0,0"
                            VerticalAlignment="Center"
                            Text="Launch arguments:"
                            Visibility="Collapsed" />
                        <TextBox x:ConnectionId='10'
                            x:Name="EditLaunchArgsTextBox"
                            Grid.Row="1"
                            Grid.Column="1"
                            Margin="10,10,0,0"
                            HorizontalAlignment="Stretch"
                            PlaceholderText="Launch arguments (optional)"
                            Visibility="Collapsed" />
                    </Grid>
                </Grid>
            </ContentDialog>

            <!--  Right click menu  -->
            <FlyoutBase.AttachedFlyout>
                <MenuFlyout x:ConnectionId='14' x:Name="RightClickMenu">
                    <MenuFlyoutItem x:ConnectionId='15'
                        x:Name="MenuOpenOption"
                                                    
                        Text="Open">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:ConnectionId='23' x:Name="MenuOpenOptionIcon" Glyph="&#xE8E5;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='16'
                        x:Name="MenuAdminOption"
                                                     
                        Text="Attempt to run as administrator">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:ConnectionId='22' x:Name="MenuAdminOptionIcon" Glyph="&#xE7EF;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='17'
                        x:Name="MenuOpenLocOption"
                                                       
                        Text="Open Location">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:ConnectionId='21' x:Name="MenuOpenLocOptionIcon" Glyph="&#xE838;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='18'
                        x:Name="MenuRemoveGroupOption"
                                                           
                        Icon="Remove"
                        Text="Remove from group"
                        Visibility="Collapsed" />

                    <MenuFlyoutItem x:ConnectionId='19'
                        x:Name="MenuRemoveOption"
                                                      
                        Icon="Delete"
                        Text="Remove from LauncherX" />

                    <MenuFlyoutItem x:ConnectionId='20'
                        x:Name="MenuEditOption"
                                                    
                        Icon="Edit"
                        Text="Edit item" />
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
        </Grid>
    </Border>
</UserControl>

