<?xml version="1.0" encoding="utf-8" ?>
<UserControl x:ConnectionId='1'
    x:Class="LauncherXWinUI.Controls.GridViewTile"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    x:Name="GridViewTileControl"
    AllowDrop="True"
    IsRightTapEnabled="True"
                                                       
                                                         
                                                 
                                       
    mc:Ignorable="d">
    <FlyoutBase.AttachedFlyout>
        <MenuFlyout x:ConnectionId='2' x:Name="CreateGroupFlyout">
            <MenuFlyoutItem Text="Create new group" />
        </MenuFlyout>
    </FlyoutBase.AttachedFlyout>
    <!--  The BorderThickness is set as such because when clicking on the GridViewTile, the highlight happens too quickly which causes the bottom border to be too thin  -->
    <Border x:ConnectionId='3'
        x:Name="ControlBorder"
        AllowDrop="True"
        BorderThickness="2,2,2,3"
        CornerRadius="{ThemeResource ControlCornerRadius}">
        <Grid x:ConnectionId='4'
            x:Name="TilePanel"
            HorizontalAlignment="Stretch"
            VerticalAlignment="Stretch"
            AllowDrop="True">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Image x:ConnectionId='5'
                x:Name="TileImage"
                Grid.Row="0"
                HorizontalAlignment="Center"
                VerticalAlignment="Center"
                AllowDrop="True"
                Stretch="Uniform" />

            <TextBlock x:ConnectionId='6'
                x:Name="TileText"
                Grid.Row="1"
                Margin="5,5,5,5"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                AllowDrop="True"
                TextAlignment="Center"
                TextTrimming="CharacterEllipsis" />

            <FlyoutBase.AttachedFlyout>
                <MenuFlyout x:ConnectionId='7' x:Name="RightClickMenu">
                    <MenuFlyoutItem x:ConnectionId='8'
                        x:Name="MenuOpenOption"
                                                    
                        Text="Open">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:ConnectionId='13' x:Name="MenuOpenOptionIcon" Glyph="&#xE8E5;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='9'
                        x:Name="MenuOpenLocOption"
                                                       
                        Text="Open Location">
                        <MenuFlyoutItem.Icon>
                            <FontIcon x:ConnectionId='12' x:Name="MenuOpenLocOptionIcon" Glyph="&#xE838;" />
                        </MenuFlyoutItem.Icon>
                    </MenuFlyoutItem>

                    <MenuFlyoutItem x:ConnectionId='10'
                        x:Name="MenuRemoveGroupOption"
                                                           
                        Icon="Remove"
                        Text="Remove from group"
                        Visibility="Collapsed" />

                    <MenuFlyoutItem x:ConnectionId='11'
                        x:Name="MenuRemoveOption"
                                                      
                        Icon="Delete"
                        Text="Remove from LauncherX" />
                </MenuFlyout>
            </FlyoutBase.AttachedFlyout>
        </Grid>
    </Border>
</UserControl>

