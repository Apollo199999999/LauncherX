<?xml version="1.0" encoding="utf-8" ?>
<UserControl
    x:Class="LauncherXWinUI.Controls.Dialogs.AddFolderDialogListViewItem"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="using:LauncherXWinUI.Controls"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <Grid>
        <TextBlock x:ConnectionId='2'
            x:Name="ListItemTextBlock"
            MaxWidth="360"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            TextTrimming="CharacterEllipsis" />

        <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
            <StackPanel Orientation="Horizontal">
                <!--  Question mark icon  -->
                <Grid>
                    <FontIcon Glyph="&#xF142;" />
                    <FontIcon Glyph="&#xF138;" />

                    <ToolTipService.ToolTip>
                        <TextBlock TextWrapping="Wrap">
                            Choose how the folder is added to LauncherX.<LineBreak />
                            <LineBreak />
                            Shortcut - A shortcut to the whole folder itself is added to LauncherX. When this shortcut is clicked, the folder is opened in File Explorer.<LineBreak />
                            <LineBreak />
                            Linked - The contents of the folder are added to LauncherX instead of the folder itself. When the contents of this folder changes, these changes will also automatically be reflected in LauncherX. Contents of a "linked" folder added to LauncherX are indicated with an arrow at the bottom left corner.</TextBlock>
                    </ToolTipService.ToolTip>
                </Grid>

                <TextBlock
                    Margin="5,0,10,0"
                    VerticalAlignment="Center"
                    Text="Mode: " />
                <ComboBox x:ConnectionId='4'
                    x:Name="FolderTypeComboBox"
                    Width="150"
                    SelectedIndex="0"
                                                                          >
                    <x:String>Shortcut</x:String>
                    <x:String>Linked</x:String>
                </ComboBox>
            </StackPanel>


            <Button x:ConnectionId='3'
                x:Name="RemoveBtn"
                Margin="10,0,0,0"
                                       
                ToolTipService.ToolTip="Remove from LauncherX">
                <Viewbox
                    Width="18"
                    Height="18"
                    Stretch="Uniform"
                    StretchDirection="Both">
                    <SymbolIcon Symbol="Delete" />
                </Viewbox>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>

