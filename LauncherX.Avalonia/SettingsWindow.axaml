<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sty="using:FluentAvalonia.Styling"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
        mc:Ignorable="d" 
        x:Class="LauncherX.Avalonia.SettingsWindow"
        Title="LauncherX Settings" Width="700" Height="467" MinWidth="600" MinHeight="400">
  
  <Panel>
    <TextBlock Text="LauncherX Settings" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0"/>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,72,0,0" >
      <TextBlock Text="Change Icon Size:" VerticalAlignment="Top" HorizontalAlignment="Left" />
      <Slider Maximum="2.5" Minimum="0.7" Width="255" />

    </StackPanel>
  
  </Panel>
</Window>
