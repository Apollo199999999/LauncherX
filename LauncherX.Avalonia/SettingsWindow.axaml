<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sty="using:FluentAvalonia.Styling"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
        mc:Ignorable="d" 
        x:Class="LauncherX.Avalonia.SettingsWindow"
        Title="LauncherX Settings" Width="700" Height="467" MinWidth="600" MinHeight="400" x:Name="SettingsWindow">
  
  <Panel>
    <TextBlock Text="LauncherX Settings" FontSize="24" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="20,20,0,0"/>

    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,72,20,20" Width="290" >     
      <TextBlock Text="Change Icon Size:" VerticalAlignment="Top" HorizontalAlignment="Left" />
      <NumericUpDown VerticalAlignment="Top" HorizontalAlignment="Left" Maximum="2.0" Minimum="0.7" Value="1.0" Increment="0.1" FormatString="{}{0:F1}" Margin="0,10,0,0" x:Name="IconSizeNumUpDown"/>

      <TextBlock Text="Change Header Text:" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,20,0,0" />
      <TextBox VerticalAlignment="Top" HorizontalAlignment="Left" Width="290" Margin="0,10,0,0" x:Name="HeaderTextBox" />   
    </StackPanel>


    <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="20,72,20,20" Width="290" >
      <TextBlock Text="About LauncherX" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left"/>
      <TextBlock VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,10,0,0" Text=""/>
    </StackPanel>
    
    <Button x:Name="SaveBtn" Content=" Save and Exit " Classes="accent" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,20"/>
  </Panel>
</Window>
