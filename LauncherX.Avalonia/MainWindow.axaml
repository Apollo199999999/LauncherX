<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:sty="using:FluentAvalonia.Styling"
        xmlns:ui="using:FluentAvalonia.UI.Controls"
        xmlns:uip="using:FluentAvalonia.UI.Controls.Primitives"
        mc:Ignorable="d"
        x:Class="LauncherX.Avalonia.MainWindow"
         Title="LauncherX - Organize all your stuff!" Width="900" Height="600" MinWidth="700" MinHeight="400" >
  
  <Panel>
    <AutoCompleteBox Margin="20,20,20,20" VerticalAlignment="Top" Watermark="Search through everything in LauncherX" />

    <Panel HorizontalAlignment="Stretch" VerticalAlignment="Top" Margin="20,72,20,20" >
      <TextBlock Text="My files, folders, and websites" FontSize="24" FontWeight="Bold" />
      
      <Button Margin="0,0,0,0" x:Name="AddWebsiteBtn" HorizontalAlignment="Right" VerticalAlignment="Stretch" Content="Add a website" Width="110" Click="AddWebsiteBtn_Click"/>
      <Button Margin="0,0,120,0" x:Name="AddFolderBtn" HorizontalAlignment="Right" VerticalAlignment="Stretch" Content="Add a folder" Width="100"/>
      <Button Margin="0,0,230,0" x:Name="AddFileBtn" HorizontalAlignment="Right" VerticalAlignment="Stretch" Content="Add a file"  Width="90" Classes="accent"/>
    
    </Panel>
    
    <ui:NavigationView HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="20,114,20,20" PaneDisplayMode="Top" IsSettingsVisible="False" >
      <ui:NavigationView.MenuItems>
        <ui:NavigationViewItem Content="All Items"/>
        <ui:NavigationViewItem Content="Files"/>
        <ui:NavigationViewItem Content="Folders"/>
        <ui:NavigationViewItem Content="Websites"/>
      </ui:NavigationView.MenuItems>
    </ui:NavigationView>
    
  </Panel>
</Window>
