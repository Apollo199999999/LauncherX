<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="LauncherX.Avalonia.Pages.SettingsUpdatesPage">
  <Panel>
    <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="20,20,20,20" >
      <TextBlock Text="Updates" FontSize="20" FontWeight="SemiBold" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,0,0,0"/>

      <TextBlock Text="Current version: {version}" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="0,15,0,0" x:Name="VersionText" />
      <Button x:Name="CheckUpdatesBtn" Content="Check for Updates" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="0,10,0,0" Classes="accent"/>
    </StackPanel>
  </Panel>
</UserControl>
